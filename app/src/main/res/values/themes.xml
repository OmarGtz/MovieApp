<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="materialButtonStyle">@style/MovieApp.Widget.Button</item>
        <item name="buttonStyle">@style/MovieApp.Widget.Button</item>
        <item name="materialButtonOutlinedStyle">@style/MovieApp.Widget.Button.outlined</item>
        <item name="bannerViewStyle">@style/MovieApp.Widget.BannerView</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MovieApp.Blue">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorOnPrimary">@color/purple_200</item>
        <item name="materialButtonStyle">@style/MovieApp.Widget.Button.small</item>
        <item name="buttonStyle">@style/MovieApp.Widget.Button.small</item>
        <item name="materialButtonOutlinedStyle">@style/MovieApp.Widget.Button.outlined.black</item>
    </style>



</resources>